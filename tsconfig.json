{
  "compilerOptions": {
    "rootDir": "bin",
    "outDir": "dist",
    "lib": ["es2023"],
    "target": "es2023",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["bin/**/*"],
  "exclude": ["node_modules", "dist"]
}

